<?xml version="1.0" ?>
<openerp>
    <data>
        <!--Form view for folio report wizard -->
        <record model="ir.ui.view" id="view_hotel_folio_wizard">
            <field name="name">folio.report.wizard</field>
            <field name="model">folio.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Folio Report" >
                    <group col="4">
                        <field name="date_start" required="1" />
                        <field name="date_end" required="1" />
                    </group>
                    <footer>
                        <button name="print_report" string="Print Report" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!--Form view for folio apartment report wizard -->
        <record model="ir.ui.view" id="view_hotel_folio_apartment_wizard">
            <field name="name">hotel.report.wizard</field>
            <field name="model">hotel.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Apartment and Daily" >
                    <group col="4">
                        <field name="report_date" required="1" />
                    </group>
                    <footer>
                        <button name="print_daily_report" string="Daily Report" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!--Action for folio daily and apartment report wizard -->
        <record model="ir.actions.act_window" id="hotel_dialy_and_apartment_wizard">
            <field name="name">Daily and Apartment</field>
            <field name="res_model">hotel.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!--Action for folio report wizard -->
        <record model="ir.actions.act_window" id="hotel_folio_wizard">
            <field name="name">Hotel Folio Report</field>
            <field name="res_model">folio.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Daily Report" action="hotel_dialy_and_apartment_wizard"
            id="wizard_hotel_daily_and_apartment_menu" parent="hotel_report_menu" sequence="31" />

        <menuitem name="Hotel Folio Report" action="hotel_folio_wizard" 
            id="wizard_hotel_menu" parent="hotel_report_menu" sequence="31" />
    </data>
</openerp>
